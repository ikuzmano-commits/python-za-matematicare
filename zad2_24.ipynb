    "n=int(input('Unesi prirodan broj:'))\n",
    "n0=n #sačuvamo početnu vrijednost od n\n",
    "korak=0\n",
    "while(n!=1):\n",
    "    if n%2==0:\n",
    "        n=n/2\n",
    "        korak=korak+1\n",
    "    else:\n",
    "        n=n*3+1\n",
    "        korak=korak+1\n",
    "print(f'Broj koraka potrebnih da broj {n0} dodje do 1 je {korak}.')"
   ]
